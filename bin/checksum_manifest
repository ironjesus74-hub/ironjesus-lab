#!/data/data/com.termux/files/usr/bin/bash
source "$HOME/ironjesus-lab/lib/common.sh"
need sha256sum
DIR="${1:-.}"
OUT="${2:-SHA256SUMS.txt}"
( cd "$DIR" && find . -type f -maxdepth 5 ! -name "$OUT" -print0 | xargs -0 sha256sum ) > "$OUT"
color green "[+] Wrote: $OUT"
log "checksum_manifest dir=$DIR out=$OUT"
